<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_logo"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Edit Button -->
            <ImageView
                android:id="@+id/btnEditKomentar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_ic"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:contentDescription="Edit komentar"
                android:visibility="visible" />

            <!-- Username & Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivProfilePicture"
                android:layout_toStartOf="@id/btnEditKomentar"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.5"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="6dp"
                    android:progressTint="@color/warna_terisi"
                    android:secondaryProgressTint="@color/warna_belum_terisi" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Komentar -->
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Komentar dari pengguna akan ditampilkan di sini"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp" />

        <!-- Review Image -->
        <ImageView
            android:id="@+id/ivReviewImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
